<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Graphs">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="CATEGORIES"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp" />

        <org.eazegraph.lib.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Summer - 5"
            android:textColor="#BA0614"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Autumn - 3"
            android:textColor="#FF5722"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Winter - 9"
            android:textColor="#00BCD4"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Spring - 5"
            android:textColor="#F130D0"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_click"
            android:layout_width="222dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="14dp"
            android:backgroundTint="#7c2855"
            android:gravity="center"
            android:text="DISPLAY GRAPH"
            android:textColor="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include
            layout="@layout/main_navigation_drawer"/>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>